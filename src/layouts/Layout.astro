---
import background from '../assets/background.svg';
import Navbar from '../components/Navbar.astro';
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Spotify local files" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Kobalt</title>
  </head>
  <body class="bg-white">
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    <div
      class="fixed inset-0 -z-10 bg-transparent bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px]"
    >
    </div>
    <Navbar />
    <main class="flex min-h-screen flex-col gap-y-12 p-4 pt-32 antialiased">
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }
</style>
